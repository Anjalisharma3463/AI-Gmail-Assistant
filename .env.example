# === Google OAuth Configuration ===
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_REDIRECT_URI=https://yourdomain.com/login/callback
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_CERT_URL=https://www.googleapis.com/oauth2/v1/certs

# === JWT Configuration ===
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION_MINUTES=10080  # 7 days in minutes

# === MongoDB & Gemini AI ===
MONGO_URI=your_production_mongo_uri
GEMINI_API_KEY=your_gemini_api_key

# === FastAPI App Settings ===
APP_ENV=production
FRONTEND_ORIGIN=https://yourfrontenddomain.com
